generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model comments {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  date     DateTime @db.Date
  email    String
  movie_id String   @db.ObjectId
  name     String
  text     String
}
model Content {
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId
  title                  String
  description            String
  type                   ContentType
  fileUrl                String?   // opsiyonel
  gameUrl                String?   // opsiyonel
  branch                 String?   // artık opsiyonel
  ageGroup               String?   // artık opsiyonel
  publishDateForStudent  DateTime? // artık opsiyonel
  publishDateForTeacher  DateTime? // artık opsiyonel
  isArchived             Boolean   @default(false)

  @@map("contents")
  @@index([branch])
}


enum ContentType {
  VIDEO
  DOCUMENT
  GAME
}