generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model comments {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  date     DateTime @db.Date
  email    String
  movie_id String   @db.ObjectId
  name     String
  text     String
}

model contents {
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId
  title                  String
  description            String
  type                   ContentType
  fileUrl                String
  gameUrl                String
  branch                 String
  ageGroup               String
  publishDateForStudent  DateTime
  publishDateForTeacher  DateTime
  isArchived             Boolean  @default(false)

  @@map("contents")
  @@index([branch])
}

enum ContentType {
  VIDEO
  DOCUMENT
  GAME
}